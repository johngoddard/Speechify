<!DOCTYPE html>
<html>
<head>

  <title>Speechify</title>

  <link href="https://fonts.googleapis.com/css?family=Open+Sans:300,400,700|Roboto:300,400,700" rel="stylesheet">
  <link rel='shortcut icon' type='image/x-icon' href='http://res.cloudinary.com/dwf6beu4e/image/upload/v1473200837/images/phrk9ttybpujej4yknnf.png'>
  <script src="//widget.cloudinary.com/global/all.js" type="text/javascript"></script>
  <%= stylesheet_link_tag    'application', media: 'all' %>
  <%= javascript_include_tag 'application' %>
  <%= csrf_meta_tags %>

  <script type="text/javascript">
    window.CLOUDINARY_IMAGE_OPTIONS = {
     cloud_name: "<%=ENV['CLOUD_NAME']%>",
     sources: ['local', 'url'],
     upload_preset: "<%= ENV['UPLOAD_PRESET'] %>",
     theme: "minimal",
   };

   window.CLOUDINARY_AUDIO_OPTIONS = {
    cloud_name: "<%=ENV['CLOUD_NAME']%>",
    upload_preset: "<%= ENV['UPLOAD_PRESET_AUDIO'] %>",
    theme: "minimal",
    sources: ['local'],
    client_allowed_formats: ["mp3", "mp4"],
    button_caption: 'Choose Audio File'
  };
  </script>
</head>
<body>

<%= yield %>

</body>
</html>
