<!DOCTYPE html>
<html>
<head>

  <title>Speechify</title>
  <link href="https://fonts.googleapis.com/css?family=Open+Sans:300,400,700|Roboto" rel="stylesheet">
  <%= stylesheet_link_tag    'application', media: 'all' %>
  <%= javascript_include_tag 'application' %>
  <%= csrf_meta_tags %>
  <script src="http://widget.cloudinary.com/global/all.js" charset="utf-8"></script>
  <script type="text/javascript">
    window.CLOUDINARY_IMAGE_OPTIONS = {
     cloud_name: "<%=ENV['CLOUD_NAME']%>",
     sources: ['local', 'url'],
     upload_preset: "<%= ENV['UPLOAD_PRESET'] %>",
     theme: "minimal",
   };

   window.CLOUDINARY_AUDIO_OPTIONS = {
    cloud_name: "<%=ENV['CLOUD_NAME']%>",
    upload_preset: "<%= ENV['UPLOAD_PRESET_AUDIO'] %>",
    theme: "minimal",
    sources: ['local'],
    client_allowed_formats: ["mp3", "mp4"],
    button_caption: 'Choose Audio File'
  };
  </script>
</head>
<body>

<%= yield %>

</body>
</html>
